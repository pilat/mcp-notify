  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@slack/web-api": "^7.0.0",
    "better-sqlite3": "^12.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.17"
  }
